<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Anadir2">

    <!-- Cabecera añadir2 -->
    <RelativeLayout
        android:id="@+id/cabeceraanadir2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#333"
        android:layout_gravity="center">

        <!-- Flecha atras -->
        <ImageButton
            android:id="@+id/flecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:maxWidth="30dp"
            android:maxHeight="30dp"
            android:src="@drawable/flechaatras"
            android:background="#00ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!-- Texto añadir -->
        <TextView
            android:id="@+id/Anadir2"
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-light"
            android:text="Detalles"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#aaa"
            android:textSize="30sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />


    </RelativeLayout>

    <!-- layout para el resto -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/cabeceraanadir2">

        <!-- Campo nombre -->
        <EditText
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:hint="Introduzca el nombre"
            />

        <!-- Campo imagen -->
        <ImageView
            android:id="@+id/imagen"
            android:layout_width="match_parent"
            android:layout_height="264dp"
            android:layout_below="@id/nombre"
            android:adjustViewBounds="true"
            android:background="#AAA"
            android:scaleType="fitCenter"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/defaultfoto"/>

        <!-- Campo cambiar imagen -->
        <Button
            android:id="@+id/botonimagen"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/imagen"
            android:layout_alignLeft="@+id/imagen"
            android:layout_alignStart="@+id/imagen"
            android:text="Cambiar Imagen"
            android:fontFamily="sans-serif-light"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_alignRight="@+id/imagen"
            android:layout_alignEnd="@+id/imagen" />

        <!-- Boton alante -->
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/flechaalante"
            app:backgroundTint="#0EB179"
            android:layout_margin="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>