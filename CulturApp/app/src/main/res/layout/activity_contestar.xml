<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contestar">



    <!-- Cabecera añadir2 -->
    <RelativeLayout
        android:id="@+id/cabeceracontestar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#333"
        android:layout_gravity="center">

        <!-- Flecha atras -->
        <ImageButton
            android:id="@+id/flecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:maxWidth="30dp"
            android:maxHeight="30dp"
            android:src="@drawable/flechaatras"
            android:background="#00ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!-- Texto añadir -->
        <TextView
            android:id="@+id/titulo"
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-light"
            android:text="Pregunta"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#aaa"
            android:textSize="30sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />


    </RelativeLayout>

    <!-- layout para el resto -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/cabeceracontestar">

        <!-- Campo imagen -->
        <ImageView
            android:id="@+id/imagen"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#AAA"
            android:scaleType="fitCenter"
            android:layout_margin="30dp"
            android:src="@drawable/defaultfoto"/>

        <!-- Campo cambiar imagen -->
        <TextView
            android:id="@+id/botonimagen"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/imagen"
            android:layout_alignEnd="@+id/imagen"
            android:layout_alignLeft="@+id/imagen"
            android:layout_alignRight="@+id/imagen"
            android:layout_alignStart="@+id/imagen"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:text="Nombre marcador"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat" />


        <TextView
            android:id="@+id/pregunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/imagen"
            android:text="Pregunta????"
            android:textSize="17sp"
            />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/pregunta"
            >

            <RadioButton
                android:id="@+id/radioButton0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:checked="true"
                android:text="Prueba"/>

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"/>

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:visibility="gone"/>

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:visibility="gone"/>


        </RadioGroup>

        <!-- Botton okay -->
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/okay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/okay"
            app:backgroundTint="#0EB179"
            android:layout_margin="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>